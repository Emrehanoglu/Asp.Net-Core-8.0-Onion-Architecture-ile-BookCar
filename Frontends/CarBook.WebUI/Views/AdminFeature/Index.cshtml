@using CarBook.Dto.FeatureDtos
@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Özellikleri Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili özellikleri ekleme, silme, güncelleme, arama ve listeleme
                            gibi işlemler bu sayfa üzerinden gercekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Özellik</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/AdminFeature/RemoveFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-primary">Güncelle</a></td>
                                       </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminFeature/CreateFeature/" class="btn btn-success">Yeni Araç Özelliği Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>