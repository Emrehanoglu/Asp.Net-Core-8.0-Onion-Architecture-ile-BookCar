@using CarBook.Dto.FeatureDtos
@model UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Özelliği Güncelleme Paneli</h4>
                        <p class="card-subtitle mb-4">
                            Araç özellik girişi sırasında bilgilerin eksiksiz doldurulması
                            önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi
                            tamamlayabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="FeatureId"/>
                            <div class="form-group">
                                <label for="exampleInputName">Özellik</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Araç Özellik Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Araç Özelliğini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>