@using CarBook.Dto.BlogDtos
@model ResultBlogByIdDto

<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.Title</h2>
    <p> @Model.Description </p>
    <p>
        <img src="images/image_7.jpg" alt="" class="img-fluid">
    </p>

    @await Component.InvokeAsync("_BlogDetailsCloudTagByBlogComponentPartial", new {id=ViewBag.blogid})

    @await Component.InvokeAsync("_BlogDetailsAuthorAboutComponentPartial")

    <div class="pt-5 mt-5">
        <h3 class="mb-5">6 Comments</h3>
        @await Component.InvokeAsync("_CommentListByBlogComponentPartial")

        @await Component.InvokeAsync("_AddCommentComponentPartial")
    </div>
</div> 
