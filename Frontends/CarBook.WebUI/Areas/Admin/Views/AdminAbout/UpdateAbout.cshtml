@using CarBook.Dto.AboutDtos
@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Yeni About Girişi</h4>
                            <p class="card-subtitle mb-4">Hakkımızda ile ilgili bilgileri aşağıdan güncelleyebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                            <form method="post">
                                <input type="hidden" asp-for="aboutId" />
                                <div class="form-group">
                                    <label for="exampleInputTitle">Başlık</label>
                                    <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="About Başlık Girişi Yapınız">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputDescription">Açıklama</label>
                                    <input type="text" class="form-control" id="exampleInputDescription" asp-for="description" placeholder="Hakkımızda Açıklama Girişi Yapınız">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputimageUrl">Görsel</label>
                                    <input type="text" class="form-control" id="exampleInputimageUrl" asp-for="imageUrl" placeholder="Hakkımızda Açıklama Girişi Yapınız">
                                </div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımızda Bilgisini Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
